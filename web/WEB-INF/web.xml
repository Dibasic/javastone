<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>DataClerkFilter</filter-name>
        <filter-class>filter.DataClerkFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DataClerkFilter</filter-name>
        <url-pattern>/clerk/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RequestHandler</servlet-name>
        <servlet-class>core.RequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>login.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutHandler</servlet-name>
        <servlet-class>login.LogoutHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePasswordHandler</servlet-name>
        <servlet-class>login.UpdatePasswordHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CallRecordHandler</servlet-name>
        <servlet-class>callRecord.CallRecordHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestHandler</servlet-name>
        <url-pattern>/RequestHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/LoginHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutHandler</servlet-name>
        <url-pattern>/LogoutHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordHandler</servlet-name>
        <url-pattern>/UpdatePasswordHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CallRecordHandler</servlet-name>
        <url-pattern>/CallRecordHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <taglib>
            <taglib-uri>dansPhoneFormatter</taglib-uri>
            <taglib-location>tlds/phone.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>
